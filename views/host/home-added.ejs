<%- include("../partials/head") %>

<body class="min-h-screen flex flex-col overflow-x-hidden w-full bg-gray-50">
  <%- include("../partials/header") %>

  <main class="grow flex items-center justify-center py-12">
    <div class="w-full max-w-md px-4">
      
      <div class="bg-white rounded-xl shadow-md border border-gray-100 p-8 text-center">
        
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 mb-6">
          <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
        </div>

        <h2 class="text-2xl font-bold text-gray-900 mb-2">Registration Successful!</h2>
        <p class="text-gray-500 mb-8">Your home has been added to our listings and is now visible to guests.</p>

        <div class="flex flex-col space-y-3">
          <a href="/homes" 
             class="w-full inline-flex justify-center items-center px-4 py-2.5 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 transition-colors shadow-sm">
            View Home List
          </a>
          
          <a href="/host/add-home" 
             class="w-full inline-flex justify-center items-center px-4 py-2.5 bg-white text-gray-700 font-medium rounded-lg border border-gray-300 hover:bg-gray-50 focus:ring-4 focus:ring-gray-100 transition-colors">
            Add Another Home
          </a>
        </div>

      </div>
    </div>
  </main>

  <%- include("../partials/footer") %>
</body>
</html>