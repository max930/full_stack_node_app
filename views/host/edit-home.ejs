<%- include("../partials/head") %>

<body class="min-h-screen flex flex-col overflow-x-hidden w-full bg-gray-50">
  <%- include("../partials/header") %>

  <main class="grow py-12">
    <div class="max-w-2xl mx-auto px-4">
      
      <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden">
        
        <div class="px-8 py-6 bg-gray-50 border-b border-gray-100">
          <h2 class="text-2xl font-bold text-gray-800"><%= editing ? "Edit" : "Register" %> your home</h2>
          <p class="text-gray-500 mt-1"><%= editing ? "Edit" : "Enter" %> the details below to <%= editing ? "update" : "list" %> your property.</p>
        </div>

        <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" enctype="multipart/form-data" class="p-8 space-y-6">
          
          <div>
            <label for="houseName" class="block text-sm font-medium text-gray-700 mb-1">House Name</label>
            <input 
              type="text" 
              name="houseName" 
              id="houseName"
              value="<%= editing ? home.houseName : '' %>"
              placeholder="e.g. Seaside Villa" 
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>
          
          <div>
            <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <input 
              type="text" 
              name="description" 
              id="description"
              value="<%= editing ? home.description : '' %>"
              placeholder="e.g. About Villa Overview" 
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <label for="price" class="block text-sm font-medium text-gray-700 mb-1">Price (per night)</label>
              <div class="relative">
                <span class="absolute left-3 top-2 text-gray-500">â‚¹</span>
                <input 
                  type="number" 
                  name="price" 
                  id="price"
                  value="<%= editing ? Number(home.price) : '' %>"
                  placeholder="0.00" 
                  step="0.01"
                  min="0"
                  required
                  class="w-full pl-8 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
                />
              </div>
            </div>

            <div>
              <label for="rating" class="block text-sm font-medium text-gray-700 mb-1">Initial Rating</label>
              <input 
                type="number" 
                name="rating" 
                id="rating"
                value="<%= editing ? Number(home.rating) : '' %>"
                placeholder="e.g. 4.5" 
                step="0.1" 
                min="0" 
                max="5"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
              />
            </div>
          </div>

          <div>
            <label for="location" class="block text-sm font-medium text-gray-700 mb-1">Location</label>
            <input 
              type="text" 
              name="location" 
              id="location"
              value="<%= editing ? home.location : '' %>"
              placeholder="e.g. Bali, Indonesia" 
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all"
            />
          </div>

          <div>
            <label for="photo" class="block text-sm font-medium text-gray-700 mb-2">Property Photo</label>
            <input 
              type="file" 
              name="photo" 
              id="photo"
              accept="image/*"
              class="w-full px-4 py-2 pb-4 "
            />            
          </div>

          <% if(editing){ %>
            <input type="hidden" name="id" value="<%= home._id %>"/>
          <% } %>

          <div class="pt-4">
            <button 
              type="submit" 
              class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-4 rounded-lg shadow-sm transition-colors duration-200">
              <%= editing ? "Update" : "Add"%> Home
            </button>
          </div>

        </form>
      </div>
    </div>
  </main>

  <%- include("../partials/footer") %>
</body>
</html>