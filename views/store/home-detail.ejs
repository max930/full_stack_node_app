<%- include("../partials/head") %>

<body class="min-h-screen flex flex-col overflow-x-hidden w-full bg-white">
  <%- include("../partials/header") %>

  <main class="grow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

      <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= matchHome.houseName %></h1>
        <p class="mb-1"><%= matchHome.description %></p>
        
        <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 text-sm text-gray-600">
          <div class="flex items-center gap-4">
            <span class="flex items-center font-medium text-gray-900">
              <svg class="w-4 h-4 text-yellow-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
              <%= matchHome.rating %> · 
              <span class="ml-1 underline decoration-gray-400 cursor-pointer hover:text-gray-900"><%= matchHome.location %></span>
            </span>
          </div>

          <div class="flex items-center gap-4">
            <button class="flex items-center hover:bg-gray-100 px-3 py-2 rounded-lg transition-colors">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
              Share
            </button>

            <%- include("../partials/favourite", {home: matchHome}) %>
          </div>
        </div>
      </div>

      <div class="w-full h-75 md:h-112.5 overflow-hidden rounded-xl bg-gray-200 mb-8 relative group">
        <img src="/uploads/<%= matchHome.photo %>" 
             alt="<%= matchHome.houseName %>" 
             class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-out">
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        
        <div class="md:col-span-2 space-y-8">
          
          <div class="flex items-center justify-between border-b border-gray-200 pb-6">
            <div>
              <h2 class="text-xl font-semibold text-gray-900">Entire home hosted by Owner</h2>
              <p class="text-gray-500 text-sm mt-1">2 guests · 1 bedroom · 1 bath</p>
            </div>
            <div class="h-12 w-12 bg-gray-800 rounded-full flex items-center justify-center text-white font-bold text-lg">
              H
            </div>
          </div>

          <div class="border-b border-gray-200 pb-6">
            <h3 class="text-xl font-semibold mb-4">About this place</h3>
            <p class="text-gray-600 leading-relaxed">
              Enjoy a comfortable stay at <%= matchHome.houseName %>. Located in the beautiful area of <%= matchHome.location %>, this property offers a relaxing atmosphere and great amenities.
            </p>
            <p class="text-xs text-gray-400 mt-6">Property ID: <%= matchHome._id %></p>
          </div>

        </div>

        <div class="md:col-span-1 relative">
          <div class="sticky top-24">
            <div class="border border-gray-200 rounded-xl shadow-xl p-6 bg-white">
              
              <div class="flex justify-between items-end mb-4">
                <div>
                  <span class="text-2xl font-bold text-gray-900">₹<%= matchHome.price %></span>
                  <span class="text-gray-500"> / night</span>
                </div>
                <div class="flex items-center text-sm font-medium">
                  <svg class="w-3 h-3 text-yellow-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                  <%= matchHome.rating %>
                </div>
              </div>

              <div class="border border-gray-400 rounded-lg mb-4 overflow-hidden">
                <div class="flex border-b border-gray-400">
                  <div class="w-1/2 p-2 border-r border-gray-400">
                    <div class="text-[10px] uppercase font-bold text-gray-800">Check-in</div>
                    <div class="text-gray-500 text-sm">Add date</div>
                  </div>
                  <div class="w-1/2 p-2">
                    <div class="text-[10px] uppercase font-bold text-gray-800">Check-out</div>
                    <div class="text-gray-500 text-sm">Add date</div>
                  </div>
                </div>
                <div class="p-2">
                  <div class="text-[10px] uppercase font-bold text-gray-800">Guests</div>
                  <div class="text-gray-500 text-sm">1 guest</div>
                </div>
              </div>

              <button class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition-colors mb-4">
                Reserve
              </button>

              <div class="text-center text-sm text-gray-500 mb-4">
                You won't be charged yet
              </div>

              <div class="space-y-3 text-gray-600">
                <div class="flex justify-between underline">
                  <span>₹<%= matchHome.price %> x 5 nights</span>
                  <span>₹<%= (matchHome.price * 5).toFixed(2) %></span>
                </div>
                <div class="flex justify-between underline">
                  <span>Service fee</span>
                  <span>₹0.00</span>
                </div>
              </div>
              
              <div class="border-t border-gray-200 mt-4 pt-4 flex justify-between font-bold text-gray-900 text-lg">
                <span>Total</span>
                <span>₹<%= (matchHome.price * 5).toFixed(2) %></span>
              </div>

            </div>
          </div>
        </div>

      </div>

    </div>
  </main>

  <%- include("../partials/footer") %>
</body>
</html>