<header class="bg-white shadow-md sticky top-0 z-50 w-full">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center shrink-0">
        <a href="/" class="text-2xl font-bold text-blue-600 hover:text-blue-700">
          Logo
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6 shrink-0">
        <a href="/homes"
          class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium whitespace-nowrap">
          Home
        </a>
        <% if(isLoggedIn && user && user.role === "guest"){ %>      
          <a href="/favourites"
            class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium whitespace-nowrap">
            Favourite List
          </a>
          <a href="/bookings"
            class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium whitespace-nowrap">
            Bookings
          </a>
        <% } %>

        <!-- Host Dropdown -->
        <% if(!isLoggedIn){ %>
          <div>
            <a href="/login"
              class="px-2 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors">
              Login
            </a>/
            <a href="/signup"
              class="px-2 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors">
              Signup
            </a>
          </div>

        <% } else {%>
          <div class="relative group">
            <a href="#"
              class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium flex items-center whitespace-nowrap">
              Host
              <svg class="w-4 h-4 ml-1 transition-transform group-hover:rotate-180 shrink-0" fill="none"
                stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </a>
            <div
              class="absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="py-2">
                <form action="/logout" method="POST">
                  <button 
                    type="submit" 
                    class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors">
                    Logout
                  </button>
                </form> 
                
                
                <% if(user && user.role !== "guest"){ %>  
                  <a href="/host/host-home-list"
                    class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition-colors">
                    Host Home List
                  </a>
                <% } %> 

              </div>
            </div>
          </div>

        <% }%>

        
      </div>

      <!-- Mobile Menu Toggle -->
      <label for="mobile-menu-toggle" class="md:hidden shrink-0 cursor-pointer">
        <svg class="w-6 h-6 text-gray-700 hover:text-blue-600 transition-colors" fill="none" stroke="currentColor"
          viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
    </div>

    <!-- Mobile Navigation -->
    <input type="checkbox" id="mobile-menu-toggle" class="hidden peer">
    <div class="hidden peer-checked:block md:hidden border-t border-gray-200 mt-2 pt-4 pb-2">
      <div class="flex flex-col space-y-3">
        <a href="/home-list" class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium py-2">
          Home List
        </a>
        <a href="/home-detail"
          class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium py-2">
          Home Detail
        </a>
        <a href="/favourite-list"
          class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium py-2">
          Favourite List
        </a>
        <a href="/reserve-bookings"
          class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium py-2">
          Reserve/Bookings
        </a>
        <details class="group">
          <summary
            class="text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium py-2 flex items-center justify-between cursor-pointer list-none">
            <span>Host</span>
            <svg class="w-4 h-4 transition-transform group-open:rotate-180 shrink-0" fill="none"
              stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </summary>
          <div class="pl-4 mt-2 space-y-2">
            <a href="/edit-home" class="block text-gray-600 hover:text-blue-600 transition-colors py-2">
              Edit Home
            </a>
            <a href="/host-home-list" class="block text-gray-600 hover:text-blue-600 transition-colors py-2">
              Host Home List
            </a>
          </div>
        </details>
      </div>
    </div>
  </nav>
</header>